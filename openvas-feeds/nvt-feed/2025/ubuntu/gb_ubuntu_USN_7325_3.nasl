  if(!isnull(res = isdpkgvuln(pkg:"linux-image-6.8.0-1023-nvidia", ver:"6.8.0-1023.26~22.04.1", rls:"UBUNTU22.04 LTS"))) {
    report += res;
  }

  if(!isnull(res = isdpkgvuln(pkg:"linux-image-6.8.0-1023-nvidia-64k", ver:"6.8.0-1023.26~22.04.1", rls:"UBUNTU22.04 LTS"))) {
    report += res;
